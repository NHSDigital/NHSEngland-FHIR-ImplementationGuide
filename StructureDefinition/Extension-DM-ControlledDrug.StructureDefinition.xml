      <path value="Extension.extension" />
      <sliceName value="quantityWords" />
      <min value="0" />
      <max value="1" />
    </element>
    <element id="Extension.extension:quantityWords.url">
      <path value="Extension.extension.url" />
      <fixedUri value="quantityWords" />
    </element>
